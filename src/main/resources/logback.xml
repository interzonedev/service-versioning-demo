<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d [%thread] %-5level %logger [%file:%line] - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.interzonedev.serviceversioningdemo" level="DEBUG" />
	<logger name="com.interzonedev.serviceversioningdemo.service" level="INFO" />
	<logger name="com.interzonedev.serviceversioningdemo.client" level="INFO" />

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
